    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="GameSwap"
    img="/gameswap.png"
    desc="Purchasing and selling platform for second-hand videogames."
    url="https://github.com/CarlosTarriasDiazWeb/M12GameSwap-vue-node"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Rainbow Voyage"
    img="/rainbow-project.png"
    desc="LGTBIQ+ Travel Agency"
    url=https://github.com/CarlosTarriasDiazWeb/M12-RainbowVoyageVueNode"
  />

</BaseLayout>
