---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="GameSwap"
    img="/gameswap.png"
    desc="GameSwap is a second-hand video game buying and selling platform that addresses the need for a specialized community for video game enthusiasts. Unlike generic platforms, GameSwap focuses on providing a diverse catalog of video games, making it easy for users to find their favorite titles."
    url="https://github.com/CarlosTarriasDiazWeb/M12GameSwap-vue-node"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Rainbow Voyage"
    img="/rainbow-project.png"
    desc="Rainbow Voyage is an innovative website designed to offer unique and safe travel experiences in selected destinations in Spain for the LGTBIQA+ community. This project addresses the need for inclusive destinations by providing detailed information on festive, cultural and gastronomic experiences in cities."
    url="https://github.com/CarlosTarriasDiazWeb/M12-RainbowVoyageVueNode"
  />

</BaseLayout>
